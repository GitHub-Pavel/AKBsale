                    form.search
                        input(type="text" placeholder="Введите фразу для поиска..." name="AKBsearch" autocomplete="off" required)
                        button(type="submit")
                            include ../../../build/img/icons/search.svg
                .header__contacts
                    ul.stick-list
                        li
                            a(href="mailto:info@mg77.ru")
                                include ../../../build/img/icons/envelope.svg
                        li
                            .list-information
                                .list-information__icon
                                    include ../../../build/img/icons/phone.svg
                                .list-information__wrapper
                                    a(href="tel:+74951221470") +7(495)122-14-70
                                    a(href="tel:+79038097049") +7(903)809-70-49
    nav.header__bottom
        .container
            ul.main-menu
                li
                    a(href="/") Главная
                li
                    a(href="catalog") Каталог товаров
                li
                    a(href="recycling") Утилизация
