    .header__top
        .container
            .row
                .header__time
                    .header__time-icon
                        include ../../../build/img/icons/calendar.svg
                    big.header__time-text пн - вс: 9:00 - 21:00
                .header__bucket
                    ul.stick-list
                        li
                            a(href="warranty") Гарантия и возврат
                        li
                            a(href="bucket") Корзина
                                .bucket-icon
                                    include ../../../build/img/icons/bucket.svg
                                    span 1
